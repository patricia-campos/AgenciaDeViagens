@model AgenciaDeViagens.Models.Contato

@{
    ViewData["Title"] = "Create";
}

  <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agência Wonder World - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/geral.css">
  <link rel="stylesheet" href="css/contato.css">

</head>

<body>

<h4>Contato</h4>

<br />

<div class="row">
    <div class="mb-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!-- <label asp-for="data_contato" class="control-label"></label> -->
                <label>Data:</label>
                <input asp-for="data_contato" class="form-control" />
                <span asp-validation-for="data_contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="nome_cliente" class="control-label"></label> -->
                <label>Nome:</label>
                <input asp-for="nome_cliente" class="form-control" />
                <span asp-validation-for="nome_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="email_cliente" class="control-label"></label> -->
                <label>E-mail:</label>
                <input asp-for="email_cliente" class="form-control" />
                <span asp-validation-for="email_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
               <!-- <label asp-for="destino" class="control-label"></label> -->
               <label>Informe o destino de seu interesse:</label>
                <input asp-for="destino" class="form-control" />
                <span asp-validation-for="destino" class="text-danger"></span>
            </div>
            <div class="form-group">
               <!-- <label asp-for="mensagem" class="control-label"></label> -->
               <label>Deixe sua mensagem:</label>
                <input asp-for="mensagem" class="form-control" />
                <span asp-validation-for="mensagem" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<!--
<div>
    <a asp-action="Index">Back to List</a>
</div>
-->
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
